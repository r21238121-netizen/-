# PROJECT PHOENIX - Telegram Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Database Configuration
# Use SQLite for development: sqlite+aiosqlite:///./phoenix_bot.db
# Use PostgreSQL for production: postgresql+asyncpg://user:password@localhost/dbname
DATABASE_URL=sqlite+aiosqlite:///./phoenix_bot.db

# Redis Configuration (optional, for production)
REDIS_URL=redis://localhost:6379/0

# Game Settings
STARTING_CHIPS=500
DAILY_BONUS_BASE=100
DAILY_BONUS_PER_REFERRAL=10
REFERRAL_REWARD=200
BOT_ADD_REWARD=1500

# Rate Limiting
MAX_SESSIONS_PER_MINUTE=1
ANTI_CHEAT_ENABLED=true

# Game Limits
MAX_REFERRALS_PER_USER=100
MAX_CLAN_SIZE=10